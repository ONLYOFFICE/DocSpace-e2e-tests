{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
